@using Microsoft.AspNetCore.Identity
@using JeudanMadbestilling.Areas.Identity.Data

@inject SignInManager<MadbestillingJeudanUser> SignInManager
@inject UserManager<MadbestillingJeudanUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <hr class="new1">
    <h1 class="display-4">Jeudan Madbestilling</h1>
    <hr class="new2">
    <br>
</div>

@if (SignInManager.IsSignedIn(User))
{
    
    <div class="text-center">
        <div>

            <div class="form-group">
                <a asp-area="" asp-controller="Madmenu" asp-action="HovedMenu"><input type="button" class="button button1" value="HovedMenu" /></a>
            </div>

            <div class="form-group">
                <a asp-area="Identity" asp-page="/Account/Manage/Index"><input type="button" class="button button1" value="@UserManager.GetUserName(User)" /></a>
            </div>

            <div class="form-group">
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="button button1">Logout</button>
                </form>
            </div>

        </div>
    </div>
}
else
{   <div class="text-center">
        <div>

            <div class="form-group">
                <a asp-area="Identity" asp-page="/Account/Login"><input type="button" class="button button1" value="Login" /></a>
            </div>


            <div class="form-group">
                <a asp-area="Identity" asp-page="/Account/Register"><input type="button" class="button button1" value="Register" /></a>
            </div>

        </div>
    </div>
}
